				<field name="uikit3" type="hidden" default="true"/>
				<field name="widgetkit" type="hidden" default="noconflict"/>
			</fieldset>
		</fields>
	</config>
	<files>
		<filename>templateDetails.xml</filename>
		<folder>less</folder>
